            <TextView
                android:id="@+id/fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="â‚¹ 1,20,000"
                android:layout_below="@+id/location"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvfees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Average Fees per Annum"
                android:layout_below="@+id/fees"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvfees"
                android:layout_alignParentRight="true"
                app:cardBackgroundColor="#E1CA00"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-10dp"
                app:cardCornerRadius="10dp"
                android:elevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/star"
                        android:layout_marginTop="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/baseline_grade_black_24dp"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvshowrate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingRight="15dp"
                        android:gravity="center"
                        android:text="4.5"
                        android:textSize="25sp"
                        android:textColor="@color/black" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvfees"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_local_library_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grades"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/grfrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/grto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <View
                android:id="@+id/v1"
                android:layout_below="@id/classes"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/classes"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_school_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Board"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CBSE"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <View
                android:id="@+id/v2"
                android:layout_below="@id/board"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/school_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/board"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    app:tint="@color/black"
                    android:src="@drawable/ic_baseline_school_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School Type"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvschooltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day School"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <View
                android:id="@+id/v3"
                android:layout_below="@id/school_type"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/strength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/school_type"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_people_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength of School"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvstrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <View
                android:id="@+id/v4"
                android:layout_below="@id/strength"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/establish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/strength"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/establish_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Establishment Year"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvestab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <View
                android:id="@+id/v5"
                android:layout_below="@id/establish"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/facility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/establish"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_location_city_24px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilties"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_fac"
                android:visibility="visible"
                android:layout_below="@id/facility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="10dp"
                android:animateLayoutChanges="true"
                app:chipSpacingVertical="1dp"
                android:paddingHorizontal="20dp"/>
            <View
                android:id="@+id/v6"
                android:layout_below="@id/chip_group_fac"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v6"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_note_add_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documents Required"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_doc"
                android:visibility="visible"
                android:layout_below="@id/documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="10dp"
                android:animateLayoutChanges="true"
                app:chipSpacingVertical="1dp"
                android:paddingHorizontal="20dp"/>
            <View
                android:id="@+id/v7"
                android:layout_below="@id/chip_group_doc"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v7"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_account_circle_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Official Social Media Handles"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:id="@+id/v8"
                android:layout_below="@id/school_type"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/socialhandles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/social"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/web"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:tint="@android:color/holo_blue_dark"
                    android:src="@drawable/ic_baseline_language_24"
                    tools:ignore="UseAppTint" />
                <ImageView
                    android:id="@+id/fb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/fb_circle"/>
                <ImageView
                    android:id="@+id/insta"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/insta_circle"/>
                <ImageView
                    android:id="@+id/ytb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ytb_circle" />
                <ImageView
                    android:id="@+id/linkedin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/link_circle"/>
            </LinearLayout>
            <View
                android:id="@+id/v9"
                android:layout_below="@id/socialhandles"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/tvrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v9"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <TextView
                    android:id="@+id/tvratetheschool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate the School"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:progressTint="@color/colorAccent"
                android:layout_below="@+id/tvrate"
                />
            <Button
                android:id="@+id/submit_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingbar"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:text="Submit"/>
            <View
                android:id="@+id/v10"
                android:layout_below="@id/submit_ratings"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="1dp"
                android:background="@color/greydark"/>
            <LinearLayout
                android:id="@+id/tvreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v10"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/black"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_rate_review_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enter_review"
                android:layout_below="@id/tvreview"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#000"
                app:boxBackgroundColor="@color/white"
                app:helperTextTextColor="@color/black"
                app:hintAnimationEnabled="true"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a Review"
                    android:maxLines="2"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/submit_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="submit"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout_after_review"
                android:layout_below="@+id/enter_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Review"/>
                <TextView
                    android:id="@+id/show_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="very good school. Good education"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_reviews"
                android:layout_below="@+id/layout_after_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>